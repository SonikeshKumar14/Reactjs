import { useEffect, useState } from "react";
// jab bhi state change hota toh useEffect chalta agar [] nhi diya toh aur [data] hoga toh jab change hoga state toh chalega useEffect
// jab [] khali hota hai toh nhi chalta chahe koisi bhi state change ho.
export default function App() {
  const [count, setCount] = useState(0);
  const [data, setData] = useState("");

  useEffect(()=>{
    console.log('data Upated');
  },[data])
  return (
    <div className="App">
      Counts => {count} data => {data} <br/>
      <button onClick={()=> setCount(count + 1)}>updateCount</button><br/>
      <button onClick={()=> setData("Ram")}>updateData</button>
    </div>
  );
}
